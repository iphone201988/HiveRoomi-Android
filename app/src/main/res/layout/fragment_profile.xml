<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.tech.hive.ui.for_room_mate.profile.ProfileFragmentVM" />

        <variable
            name="typeCheck"
            type="Integer" />

        <import type="android.view.View" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.for_room_mate.profile.ProfileFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clHeader"
            android:layout_width="0dp"
            android:layout_height="@dimen/_90sdp"
            android:background="@drawable/top_bg"
            android:paddingHorizontal="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvTitle"
                style="@style/TextView.SfBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="@string/profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivSettings"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:onClick="@{v->vm.onClick(v)}"
                android:src="@drawable/ic_settings"
                app:layout_constraintBottom_toBottomOf="@id/tvTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivPerson"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginTop="-50dp"
            android:src="@drawable/dummy_person"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clHeader"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />

        <ImageView
            android:id="@+id/ivCheck"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:src="@drawable/ic_check_mark"
            app:layout_constraintEnd_toStartOf="@id/tvPersonName"
            app:layout_constraintTop_toBottomOf="@id/ivPerson" />

        <TextView
            android:id="@+id/tvPersonName"
            style="@style/TextView.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:text="Elena Salvatore"
            android:textColor="@color/start_color"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintBottom_toBottomOf="@id/ivCheck"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivCheck" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPersonName">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_12sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvNameTitle"
                    style="@style/TextView.Medium2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_11ssp"
                    android:text="@string/name"
                    app:layout_constraintEnd_toStartOf="@id/tvName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvName"
                    style="@style/TextView.Regular2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Elena Salvatore"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvNameTitle"
                    app:layout_constraintTop_toTopOf="@id/tvNameTitle" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAgeTitle"
                    style="@style/TextView.Medium2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/age"
                    app:layout_constraintEnd_toStartOf="@id/tvAge"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvName" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAge"
                    style="@style/TextView.Regular2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="25"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvAgeTitle"
                    app:layout_constraintTop_toTopOf="@id/tvAgeTitle" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvGenderTitle"
                    style="@style/TextView.Medium2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/gender"
                    app:layout_constraintEnd_toStartOf="@id/tvGender"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvAge" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvGender"
                    style="@style/TextView.Regular2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Male"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvGenderTitle"
                    app:layout_constraintTop_toTopOf="@id/tvGenderTitle" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvProfessionTitle"
                    style="@style/TextView.Medium2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/profession"
                    app:layout_constraintEnd_toStartOf="@id/tvProfession"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvGender" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvProfession"
                    style="@style/TextView.Regular2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Graphic Designer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvProfessionTitle"
                    app:layout_constraintTop_toTopOf="@id/tvProfessionTitle" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvLocationTitle"
                    style="@style/TextView.Medium2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/location"
                    app:layout_constraintEnd_toStartOf="@id/tvProfession"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvProfession" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvLocation"
                    style="@style/TextView.Regular2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Milan, Italy"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvLocationTitle"
                    app:layout_constraintTop_toTopOf="@id/tvLocationTitle" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvBioTitle"
                    style="@style/TextView.Medium2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/bio"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvLocation" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvBio"
                    style="@style/TextView.Regular2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="I  love houseplants and quiet mornings. Looking for respectful, clean roommates. I work remotely 9–5."
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvBioTitle" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clPreference"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="@{typeCheck==3?View.GONE:View.VISIBLE}"
                    app:layout_constraintEnd_toEndOf="@+id/tvBio"
                    app:layout_constraintStart_toStartOf="@+id/tvBio"
                    app:layout_constraintTop_toBottomOf="@id/tvBio">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvPreferences"
                        style="@style/TextView.Semibold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:includeFontPadding="false"
                        android:text="@string/preferences"
                        android:textColor="@color/start_color"
                        android:visibility="@{typeCheck==1?View.VISIBLE:View.GONE}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvBudgetTitle"
                        style="@style/TextView.Medium2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/budget"
                        android:visibility="@{typeCheck==1?View.VISIBLE:View.GONE}"
                        app:layout_constraintEnd_toStartOf="@id/tvBudget"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvPreferences" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvBudget"
                        style="@style/TextView.Regular2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="$700"
                        android:visibility="@{typeCheck==1?View.VISIBLE:View.GONE}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvBudgetTitle"
                        app:layout_constraintTop_toTopOf="@id/tvBudgetTitle" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvPetsTitle"
                        style="@style/TextView.Medium2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/pets"
                        android:visibility="@{typeCheck==1?View.VISIBLE:View.GONE}"
                        app:layout_constraintEnd_toStartOf="@id/tvPets"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvBudget" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvPets"
                        style="@style/TextView.Regular2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Allowed"
                        android:visibility="@{typeCheck==1?View.VISIBLE:View.GONE}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvPetsTitle"
                        app:layout_constraintTop_toTopOf="@id/tvPetsTitle" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSmokingTitle"
                        style="@style/TextView.Medium2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/smoking"
                        android:visibility="@{typeCheck==1?View.VISIBLE:View.GONE}"
                        app:layout_constraintEnd_toStartOf="@id/tvSmoking"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvPets" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSmoking"
                        style="@style/TextView.Regular2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="No"
                        android:visibility="@{typeCheck==1?View.VISIBLE:View.GONE}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvSmokingTitle"
                        app:layout_constraintTop_toTopOf="@id/tvSmokingTitle" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvOverNightTitle"
                        style="@style/TextView.Medium2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/overnight_guests"
                        android:visibility="@{typeCheck==1?View.VISIBLE:View.GONE}"
                        app:layout_constraintEnd_toStartOf="@id/tvOverNight"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvSmoking" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvOverNight"
                        style="@style/TextView.Regular2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Occassionally"
                        android:visibility="@{typeCheck==1?View.VISIBLE:View.GONE}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvOverNightTitle"
                        app:layout_constraintTop_toTopOf="@id/tvOverNightTitle" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvCleanTitle"
                        style="@style/TextView.Medium2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/cleanliness"
                        android:visibility="@{typeCheck==1?View.VISIBLE:View.GONE}"
                        app:layout_constraintEnd_toStartOf="@id/tvClean"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvOverNight" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvClean"
                        style="@style/TextView.Regular2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="4/5"
                        android:visibility="@{typeCheck==1?View.VISIBLE:View.GONE}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvCleanTitle"
                        app:layout_constraintTop_toTopOf="@id/tvCleanTitle" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSleepTitle"
                        style="@style/TextView.Medium2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/sleep_schedule"
                        android:visibility="@{typeCheck==1?View.VISIBLE:View.GONE}"
                        app:layout_constraintEnd_toStartOf="@id/tvSleep"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvClean" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSleep"
                        style="@style/TextView.Regular2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="11 PM"
                        android:visibility="@{typeCheck==1?View.VISIBLE:View.GONE}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvSleepTitle"
                        app:layout_constraintTop_toTopOf="@id/tvSleepTitle" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvPreferences2"
                        style="@style/TextView.Semibold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:includeFontPadding="false"
                        android:text="@string/preferences"
                        android:textColor="@color/start_color"
                        android:visibility="@{typeCheck==2?View.VISIBLE:View.GONE}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvRoomTitle2"
                        style="@style/TextView.Medium2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/room_type"
                        android:visibility="@{typeCheck==2?View.VISIBLE:View.GONE}"
                        app:layout_constraintEnd_toStartOf="@id/tvRoom2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvPreferences2" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvRoom2"
                        style="@style/TextView.Regular2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Studio"
                        android:visibility="@{typeCheck==2?View.VISIBLE:View.GONE}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvRoomTitle2"
                        app:layout_constraintTop_toTopOf="@id/tvRoomTitle2" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSmokingTitle2"
                        style="@style/TextView.Medium2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/smoking"
                        android:visibility="@{typeCheck==2?View.VISIBLE:View.GONE}"
                        app:layout_constraintEnd_toStartOf="@id/tvSmoking2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvRoom2" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSmoking2"
                        style="@style/TextView.Regular2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Never"
                        android:visibility="@{typeCheck==2?View.VISIBLE:View.GONE}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvSmokingTitle2"
                        app:layout_constraintTop_toTopOf="@id/tvSmokingTitle2" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvPetsTitle2"
                        style="@style/TextView.Medium2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/pets"
                        android:visibility="@{typeCheck==2?View.VISIBLE:View.GONE}"
                        app:layout_constraintEnd_toStartOf="@id/tvPets2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvSmoking2" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvPets2"
                        style="@style/TextView.Regular2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Yes"
                        android:visibility="@{typeCheck==2?View.VISIBLE:View.GONE}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvPetsTitle2"
                        app:layout_constraintTop_toTopOf="@id/tvPetsTitle2" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvHouseMateTitle2"
                        style="@style/TextView.Medium2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/preferred_housemates"
                        android:visibility="@{typeCheck==2?View.VISIBLE:View.GONE}"
                        app:layout_constraintEnd_toStartOf="@id/tvHouseMate2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvPets2" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvHouseMate2"
                        style="@style/TextView.Regular2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Workers"
                        android:visibility="@{typeCheck==2?View.VISIBLE:View.GONE}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvHouseMateTitle2"
                        app:layout_constraintTop_toTopOf="@id/tvHouseMateTitle2" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvCleanTitle2"
                        style="@style/TextView.Medium2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/cleanliness"
                        android:visibility="@{typeCheck==2?View.VISIBLE:View.GONE}"
                        app:layout_constraintEnd_toStartOf="@id/tvClean2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvHouseMateTitle2" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvClean2"
                        style="@style/TextView.Regular2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="4/5"
                        android:visibility="@{typeCheck==2?View.VISIBLE:View.GONE}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvCleanTitle2"
                        app:layout_constraintTop_toTopOf="@id/tvCleanTitle2" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{typeCheck==2?View.VISIBLE:View.GONE}"
                    app:layout_constraintTop_toBottomOf="@id/clPreference">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSearch"
                        style="@style/TextView.Semibold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:includeFontPadding="false"
                        android:text="@string/search_criteria"
                        android:textColor="@color/start_color"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvAreaTitle"
                        style="@style/TextView.Medium2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/preferred_area"
                        app:layout_constraintEnd_toStartOf="@id/tvArea"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvSearch" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvArea"
                        style="@style/TextView.Regular2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Berlin, Kreuzberg"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvAreaTitle"
                        app:layout_constraintTop_toTopOf="@id/tvAreaTitle" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvBudgetTitle2"
                        style="@style/TextView.Medium2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/budget"
                        app:layout_constraintEnd_toStartOf="@id/tvBudget2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvArea" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvBudget2"
                        style="@style/TextView.Regular2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="$600 – 900/month"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvBudgetTitle2"
                        app:layout_constraintTop_toTopOf="@id/tvBudgetTitle2" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvMoveTitle"
                        style="@style/TextView.Medium2"
                        android:layout_width="0dp"
